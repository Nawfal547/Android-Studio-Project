<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <Button
        android:id="@+id/openSketchTaggerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Photo App"
        android:onClick="openSketchTagger" />

    <Button
        android:id="@+id/openPhotoTaggerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Sketch Tagger"
        android:onClick="openPhotoTagger"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/openStoryGeneratorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Story Generator"
        android:onClick="openStoryGenerator" />

</LinearLayout>
