<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Search Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/searchInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter tags (comma-separated)" />

        <Button
            android:id="@+id/findButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find"
            android:layout_marginStart="10dp" />
    </LinearLayout>

    <!-- Checkbox for Photos/Sketches -->
    <CheckBox
        android:id="@+id/includeSketchesCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Include Sketches"
        android:layout_marginBottom="10dp" />

    <!-- ListView for Items -->
    <ListView
        android:id="@+id/itemListView"
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

    <!-- Story Button -->
    <Button
        android:id="@+id/storyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate Story"
        android:layout_marginTop="10dp" />

    <!-- Story Output -->
    <TextView
        android:id="@+id/storyOutput"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@android:color/white"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:gravity="top|start"
        android:scrollbars="vertical" />


    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginTop="10dp" />
</LinearLayout>
